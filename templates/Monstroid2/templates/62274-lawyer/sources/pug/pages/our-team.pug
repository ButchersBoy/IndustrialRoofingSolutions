  include ../sections/_header-default

  section.bg-accent-2
    +parallax({
      "src": "images/parallax-5.jpg",
      "class": 'parallax-header'
    })
      .parallax-header__inner: .parallax-header__content
        .container
          .row.justify-content-sm-center
            .col-md-10.col-xl-8
              h1.heading-decorated.heading-decorated_center Our team
  ='\n'

  section.section-lg.bg-default
    .container
      .row.row-50
        .col-md-6.col-lg-4.col-xl-3
