extends  ../_skeleton

//- Includes
include ../elements/_ui-pricing-table

block variables
  - var activeIndex = 1
  - var pageName = 'Pricing Table'

block page
  // Page header
  include ../sections/_header-default

  section.section-lg.bg-default
    .container
      .row.row-50
        .col-md-6.col-xl-3
          +pricing-table({
            title: 'Starter',
            price: '$14.89'
          })
            ul.list
              li
                span 10GB Storage amount
                =' '
              li Unlimited users
              li 30GB Bandwidth
              li 20 MySQL Databases

        .col-md-6.col-xl-3
            +pricing-table({
              title: 'Standard',
              price: '$32.89'
            })
              ul.list
                li
                  span 10GB Storage amount
                  =' '
                li Unlimited users
                li 30GB Bandwidth
                li 20 MySQL Databases

        .col-md-6.col-xl-3
          +pricing-table({
            title: 'Business',
            price: '$76.89 '
          })
            ul.list
              li
                span 10GB Storage amount
                =' '
              li Unlimited users
              li 30GB Bandwidth
              li 20 MySQL Databases

        .col-md-6.col-xl-3
          +pricing-table({
            title: 'Professional',
            price: '$89.89'
          })
            ul.list
              li
                span 10GB Storage amount
                =' '
              li Unlimited users
              li 30GB Bandwidth
              li 20 MySQL Databases
  ='\n'

  // Page Footer
  include ../sections/_footer-corporate

