extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs
include ../elements/_ui-tag-list
include ../elements/_ui-list-inline-icon
include ../elements/_ui-slider-blog
include ../elements/_ui-pagination-classic

block variables
  - var activeIndex = 5
  - var pageName = 'Grid Blog'

block page
  // Page header
  include ../sections/_header-default

  +breadcrumbs({
      path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  section.bg-default.section-md
    .container
      .row.row-60
        .col-md-6.col-xl-4
          // Post classic
          article.post-classic.post-minimal 
            +jpg('single-post-2-886x661', 'img-bordered')

            .post-classic-title
              h5: a(href=postImage) A Definitive Guide to the Best Dining and Drinking Venues in the City

            .post-meta
              .group
                a(href=postImage): time(datetime='2018') Jan.20, 2018
                a(href=postImage).meta-author by Calvin Fitzgerald

        .col-md-6.col-xl-4
          // Post classic
          article.post-classic.post-minimal
            +jpg('single-post-3-886x661', 'img-bordered')

            .post-classic-title
              h5: a(href=postImage) A Definitive Guide to the Best Dining and Drinking Venues in the City

            .post-meta
              .group
                a(href=postImage): time(datetime='2018') Jan.20, 2018
                a(href=postImage).meta-author by Calvin Fitzgerald

        .col-md-6.col-xl-4
          // Post slider
          article.post-slider.post-minimal

            +slider-blog({
              class: 'carousel-slider-blog-post',
              items: [
                {
                  original_img: 'gallery-post-1-886x668',
                  img_thumb: 'gallery-post-1-886x668'
                },
                {
                  original_img: 'gallery-post-2-886x668',
                  img_thumb: 'gallery-post-2-886x668'
                },
                {
                  original_img: 'gallery-post-3-886x668',
                  img_thumb: 'gallery-post-3-886x668'
                },
                {
                  original_img: 'gallery-post-4-886x668',
                  img_thumb: 'gallery-post-4-886x668'
                },
                {
                  original_img: 'gallery-post-5-886x668',
                  img_thumb: 'gallery-post-5-886x668'
                },
                {
                  original_img: 'gallery-post-6-886x668',
                  img_thumb: 'gallery-post-6-886x668'
                },
                {
                  original_img: 'gallery-post-7-886x668',
                  img_thumb: 'gallery-post-7-886x668'
                }
              ]
            })

            .post-classic-title
              h5: a(href=postSlider) A Definitive Guide to the Best Dining and Drinking Venues in the City

            .post-meta
              .group
                a(href=postSlider): time(datetime='2018') Jan.20, 2018
                a(href=postSlider).meta-author by Calvin Fitzgerald


        .col-md-6.col-xl-4
          // Post video
          article.post-video.post-minimal
            .entry-video.embed-responsive.embed-responsive-16by9.img-bordered
              iframe(width='886', height='668', src=videoSrc, allowfullscreen='')

            .post-classic-title
              h5: a(href=postVideo) A Definitive Guide to the Best Dining and Drinking Venues in the City

            .post-meta
              .group
                a(href=postVideo): time(datetime='2018') Jan.20, 2018
                a(href=postVideo).meta-author by Calvin Fitzgerald

        .col-md-6.col-xl-4
          // Post classic
          article.post-classic.post-minimal
            +jpg('single-post-1-886x661', 'img-bordered')

            .post-classic-title
              h5: a(href=postImage) A Definitive Guide to the Best Dining and Drinking Venues in the City

            .post-meta
              .group
                a(href=postImage): time(datetime='2018') Jan.20, 2018
                a(href=postImage).meta-author by Calvin Fitzgerald

        .col-md-6.col-xl-4
          // Post classic
          article.post-classic.post-minimal
            +jpg('single-post-4-886x661', 'img-bordered')

            .post-classic-title
              h5: a(href=postImage) A Definitive Guide to the Best Dining and Drinking Venues in the City

            .post-meta
              .group
                a(href=postImage): time(datetime='2018') Jan.20, 2018
                a(href=postImage).meta-author by Calvin Fitzgerald

        .col-md-6.col-xl-4
          // Post Link
          article.post-link
            .post-classic-title
              h5: a(href=blogPostLink) A Definitive Guide to the Best Dining and Drinking Venues in the City
            a(href="http://templatemonster.com/") http://templatemonster.com/

        .col-md-6.col-xl-4
          // Post quote
          .post-quote
            .post-classic-body
              article.quote-line
                .quote-line__aside
                  +png('quote-mark-44x36')
                .quote-line__main
                  h4.q A Definitive Guide to the Best Dining and Drinking Venues
                  h5.cite Martin van Buuren

              .post-meta
                .group
                  a(href=postQuote): time(datetime='2018') Jan.20, 2018
                  a(href=postQuote).meta-author by Calvin Fitzgerald
                  a(href=postQuote) 3 comment(s)
                  +tag-list({
                    list_class: 'list-inline-tag',
                    href: postLink,
                    items: [
                      "News",
                      'State Guide']
                  })

            .post-classic-footer
              a(href=postQuote).button.button-primary-outline Read more

        .col-md-6.col-xl-4
          // Post standard
          article.post-classic.post-minimal
            .post-classic-title
              h5: a(href=postLink) A Definitive Guide to the Best Dining and Drinking Venues in the City

            .post-meta
              .group
                a(href=postLink): time(datetime='2018') Jan.20, 2018
                a(href=postLink).meta-author by Calvin Fitzgerald

            .post-minimal-footer
              +list-inline-icon({
                list_class: 'list-inline-sm',
                items: [
                  "icon-xxs fa-facebook",
                  'icon-xxs fa-twitter',
                  'icon-xxs fa-google-plus',
                  'icon-xxs fa-vimeo',
                  'icon-xxs fa-youtube',
                  'icon-xxs fa-pinterest-p']
              })

              a(href=postLink).button.button-primary-outline Read more

        .col-md-6.col-xl-4
          // Post classic
          article.post-minimal
            +jpg('single-post-2-886x661', 'img-bordered')
            .post-classic-title
              h5: a(href=postImage) A Definitive Guide to the Best Dining and Drinking Venues in the City

            .post-meta
              .group-xs
                a(href=postImage): time(datetime='2018') Jan.20, 2018
                a(href=postImage).meta-author by Calvin Fitzgerald
                a(href=postImage) 3 comment(s)
                a(href=postImage) Template
                +tag-list({
                    list_class: 'list-inline-tag',
                    href: postImage,
                    items: [
                      "City Guide",
                      'Special Offers']
                  })
            .post-classic-body
              p With its overall history spanning more than 200 years, Indianapolis has a lot of long-established venues, with restaurants, bars, and pubs being at the very top of that list. We’ve decided to help our Hotel’s guest, who may be visiting the city for the first time in the intricate process of choosing where to eat…

        .col-md-6.col-xl-4
          // Post audio
          article.post-audio.post-minimal

            include ../includes/_rd-audio-track

            .post-classic-title
              h5: a(href=postAudio) A Definitive Guide to the Best Dining and Drinking Venues in the City

            .post-minimal-footer
              .post-meta
                .group
                  a(href=postAudio): time(datetime='2018') Jan.20, 2018
                  a(href=postAudio).meta-author by Calvin Fitzgerald

  +divider
  section.section-sm.text-center
    .container
      +pagination


  // Page Footer
  include ../sections/_footer-corporate

