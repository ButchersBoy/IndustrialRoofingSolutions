								number:      3,
								original:    'services-3-original',
								img:         'services-3-418x315',
								icon_class1: 'linear-icon-picture',
								items:       ['Services'],
								title:       'Exterior Design',
								desc:        'Creating stunning exteriors.',
								icon_class2: 'linear-icon-plus'
							})
						
						.col-12.col-md-6.col-lg-4.isotope-item(data-filter='Category 2')
							+portfolio-item({
								single_img:  true,
								number:      3,
