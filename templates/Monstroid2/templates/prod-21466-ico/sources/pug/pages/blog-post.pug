		+breadcrumbs({
			text: 'Single Post'
		})

	.gradient-2
		section.section.section-md.text-sm-left
			.container: .row.row-30.row-md-60
				.col-lg-8
					article.post
						a.post-figure( href='blog-post.html' ): +img( 'post-2-773x311' )
						.post-body.post-body-2
							.post-info-panel
								ul.list-inline
									li: time.post-time( datetime='2019' ) November 10, 2019
									li: a.post-tag( href='#' ) Cryptocurrency
							.post-share
								.post-share-button( data-custom-toggle='' data-custom-toggle-disable-on-blur='true' )
								ul.post-social-list
									li: a.icon.mdi.mdi-facebook( href='#' )
