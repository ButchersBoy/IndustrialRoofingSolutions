					.box-default
						.box-default-header
							h6.box-default-title 2 Comments
						.box-default-body
							article.box-comment
								.unit.flex-column.flex-sm-row
									.unit-left: +img('user-1-76x76').box-comment-figure
									.unit-body
										.box-comment-author: a( href='#' ) John	Parker
										.box-comment-time: time( datetime='2019' ) April 14, 2019
