							article.box-comment
								.unit.flex-column.flex-sm-row
									.unit-left: +img('user-2-76x76').box-comment-figure
									.unit-body
										.box-comment-author: a( href='#' ) Michelle	Mitchell
										.box-comment-time: time( datetime='2019' ) April 14, 2019
