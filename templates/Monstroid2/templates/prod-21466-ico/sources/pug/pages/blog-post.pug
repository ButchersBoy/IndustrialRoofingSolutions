					.box-default
						.box-default-header
							h6.box-default-title Leave a comment
						.box-default-body
							//RD Mailform
							form.rd-mailform.rd-form
								.form-wrap
									label.form-label( for='comment-name' ) Name
									input#comment-name.form-input( type='text' name='name' data-constraints='@Required' )
								.form-wrap
									label.form-label( for='comment-email' ) Email
									input#comment-email.form-input( type='email' name='email' data-constraints='@Required @Email' )
								.form-wrap
									label.form-label( for='comment-message' ) Your comment
									textarea#comment-message.form-input( name='message' data-constraints='@Required' )
								.form-button
									button.button.button-primary.button-isi( type='submit' ) Submit


				.col-lg-4: include ../includes/_blog-sidebar

	include ../sections/_footer-info
	include ../sections/_footer-classic
