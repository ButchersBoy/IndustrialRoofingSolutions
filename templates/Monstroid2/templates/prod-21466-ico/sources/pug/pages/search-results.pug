extends ../_skeleton

block variables
	- pageName = 'Search Results'

block page
	include ../sections/_header-classic

	.gradient-1.bg-vide-2
		.bg-vide( data-vide-bg='video/video-3' data-vide-options='posterType: jpg, position: 50% 50%' )

		+breadcrumbs({
			text: pageName,
			subtitle: 'What We Found'
		})

	.gradient-2
		//Search results
		section.section.section-md
			.container
				.row.justify-content-center
					.col-lg-9
						//RD Search
						form.rd-form.rd-search( action='search-results.html' method='GET' )
							.form-wrap
								label.form-label( for='rd-search-form-input' ) Search
								input.form-input( id='rd-search-form-input' type='text' name='s' autocomplete='off' )
								button.button-search.mdi.mdi-magnify( type='submit' )

						.rd-search-results

	include ../sections/_footer-info
	include ../sections/_footer-classic
