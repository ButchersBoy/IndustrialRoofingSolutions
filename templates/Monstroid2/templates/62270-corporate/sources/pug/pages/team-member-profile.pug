extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs
include ../elements/_ui-list-inline-icon

block variables
  - var activeIndex = 1
  - var pageName = 'Team member profile'

block page
  // Page header
  include ../sections/_header-default

  +breadcrumbs({
    path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  // Team member profile
  section.section-lg.bg-gray-3
    .container
      // Profile Corporate
      article.profile-corporate
        +jpg('sam-jones-418x418', 'profile-corporate__image')

        .profile-corporate__caption
          p.profile-corporate__title.heading-divider.text-center Sam Jones
          p.profile-corporate__subtitle Senior partner
          p As a principal advisor, Sam Jones guides business owners through the pitfalls and joys of the corporational world. Sam is a speaker and an author, who leads CorpoRationa Inc. In addition to that he's an online financial advisor for the company. Sam is passionate about business and helping business owners find better ways to do things, make more money and enjoy life more.

          +list-inline-icon({
            list_class: ['list-inline', 'list-inline-lg'],
            items: [
              "icon-sm icon-secondary icon-secondary-divider fa-facebook",
              'icon-sm icon-secondary icon-secondary-divider fa-twitter',
              'icon-sm icon-secondary icon-secondary-divider fa-google-plus'
            ]
          })

  ='\n'

  // Page Footer
  include ../sections/_footer-corporate
