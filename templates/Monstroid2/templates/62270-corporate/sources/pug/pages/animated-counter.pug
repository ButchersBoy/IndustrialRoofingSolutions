extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs
include ../elements/_ui-progress-bar-linear

block variables
	- var activeIndex = 6
	- var pageName = 'Animated Counter'

block page
	// Page header
	include ../sections/_header-default

	+breadcrumbs({
		path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
	})

	section.section-lg.bg-gray-3.text-center
		.container
			.row.justify-content-md-center
				.col-md-10.col-lg-8.col-xl-6
					+progress-bar-linear({
						title: "Website Update Progress",
						valueTo: "49"
					})

					+progress-bar-linear({
						title: "Novi Builder1",
						valueTo: "29"
					})

					+progress-bar-linear({
						title: "Flexible and Multipurpose",
						valueTo: "86"
					})

	='\n'
	
	+divider
	
	section.section-lg.bg-gray-3.text-center
		.container
			.row.justify-content-md-center
				.col-md-10.col-lg-8.col-xl-6
					+progress-bar-linear({
						title: "Website Update Progress",
						progressStyle: "progress-linear-modern",
						valueTo: "49"
					})

					+progress-bar-linear({
						title: "Novi Builder1",
						progressStyle: "progress-linear-modern",
						valueTo: "29"
					})

					+progress-bar-linear({
						title: "Flexible and Multipurpose",
						progressStyle: "progress-linear-modern",
						valueTo: "86"
					})

	='\n'

	// Page Footer
	include ../sections/_footer-corporate

