          .owl-carousel.carousel-gallery(data-autoplay='true' data-items='1', data-stage-padding='0', data-loop='false', data-margin='10px', data-mouse-drag="false" data-nav='true' data-dots='true' data-lightgallery='group')
            figure.thumb-decorated
              +jpg('room-4-650x490', 'img-decorated')
            figure.thumb-decorated
              +jpg('room-2-650x490', 'img-decorated')
            figure.thumb-decorated
              +jpg('room-5-650x490', 'img-decorated')
  ='\n'

  +divider
  
  // Family Room
  section.section-lg.bg-default
    .container
      .row.row-50.justify-content-md-center.flex-lg-row-reverse
        .col-md-10.col-lg-6
          h3: a(href='single-room.html') Family Room
          p Enjoy our classic suites with all the elegancy and comfort that its interior has… It features such essentials as a flat-screen 45″ TV, WiFi and 2 bathrooms with a living room and 2 bedrooms, big and chic enough to be counted as real suite bedrooms!

          h4 Prices start at
          .price
            span.price__aside-top $
            span.price__main 195
            span.price__aside-bottom /per night

          ul.list-marked
            li Adults: 2
            li
              | Facilites: 
              a(href=roomsResults) Closet with hangers
              | , 
              a(href=roomsResults) Digital Personal Safe
              | , 
              a(href=roomsResults) Free high speed Wi-Fi and cable internet access
            li Size: 25m²
            li Bed Type: One bed
            li
              | Categories: 
              a(href=roomsResults) Double
          a.button.button-primary(href=bookingLink) Book now!


        .col-md-10.col-lg-6
          // Owl Carousel
          .owl-carousel.carousel-gallery(data-autoplay='true' data-items='1', data-stage-padding='0', data-loop='false', data-margin='10px', data-mouse-drag="false" data-nav='true' data-dots='true' data-lightgallery='group')
            figure.thumb-decorated
              +jpg('room-6-650x490', 'img-decorated')
            figure.thumb-decorated
              +jpg('room-4-650x490', 'img-decorated')
            figure.thumb-decorated
              +jpg('room-5-650x490', 'img-decorated')
  ='\n'

  // Pagination
  section.section-lg.bg-default
    .container 
      .divider
      +pagination
  ='\n'

  include ../sections/_footer-corporate

