extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs
include ../elements/_ui-tag-list
include ../elements/_ui-list-inline-icon
include ../elements/_ui-slider-blog
include ../elements/_ui-pagination-classic

block variables
  - var activeIndex = 5
  - var pageName = 'Masonry Blog'

block page
  // Page header
  include ../sections/_header-default

  +breadcrumbs({
    path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  section.bg-default.section-md
    .container
      .posts-lists-masonry-3-cols
        // Post classic
        article.post-classic.post-minimal
          +jpg('single-post-2-886x661', 'img-bordered')

          .post-classic-title
            h5: a(href=postImage) A Definitive Guide to the Best Dining and Drinking Venues in the City

          .post-meta
            .group
              a(href=postImage): time(datetime='2017') Jan.20, 2016
              a(href=postImage).meta-author by Calvin Fitzgerald

        // Post standard
        article.post-classic.post-minimal
          .post-classic-title
            h5: a(href=postLink) A Definitive Guide to the Best Dining and Drinking Venues in the City
  
          .post-meta
            .group
              a(href=postLink): time(datetime='2017') Jan.20, 2016
              a(href=postLink).meta-author by Calvin Fitzgerald
  
          .post-classic-body
            p With its overall history spanning more than 200 years, Indianapolis has a lot of long-established venues, with restaurants, bars, and pubs being at the very top of that list. We’ve decided to help our Hotel’s guest, who may be visiting the city for the first time in the intricate process of choosing where to eat…
  
          .post-minimal-footer
            +list-inline-icon({
              list_class: 'list-inline-sm',
              items: [
                "icon-xxs fa-facebook",
                'icon-xxs fa-twitter',
                'icon-xxs fa-google-plus',
                'icon-xxs fa-vimeo',
                'icon-xxs fa-youtube',
                'icon-xxs fa-pinterest-p']
            })
  
            a(href=postLink).button.button-primary-outline Read more

        // Post classic
        article.post-classic.post-minimal
          +jpg('single-post-3-886x661', 'img-bordered')

          .post-classic-title
            h5: a(href=postImage) A Definitive Guide to the Best Dining and Drinking Venues in the City

          .post-meta
            .group
              a(href=postImage): time(datetime='2017') Jan.20, 2016
              a(href=postImage).meta-author by Calvin Fitzgerald

        // Post Link
        article.post-link
          .post-classic-title
            h5: a(href=blogPostLink) A Definitive Guide to the Best Dining and Drinking Venues in the City
          a(href="http://templatemonster.com/") http://templatemonster.com/

        // Post video
        article.post-video.post-minimal
          .entry-video.embed-responsive.embed-responsive-16by9.img-bordered
            iframe(width='886', height='668', src=videoSrc, allowfullscreen='')

          .post-classic-title
            h5: a(href=postVideo) A Definitive Guide to the Best Dining and Drinking Venues in the City

          .post-meta
            .group
              a(href=postVideo): time(datetime='2017') Jan.20, 2016
              a(href=postVideo).meta-author by Calvin Fitzgerald

        // Post quote
        .post-quote
          .post-classic-body
            article.quote-line
              .quote-line__aside
                +png('quote-mark-44x36')
              .quote-line__main
                h4.q A Definitive Guide to the Best Dining and Drinking Venues
                h5.cite Martin van Buuren

            .post-meta
              .group
                a(href=postQuote): time(datetime='2017') Jan.20, 2016
                a(href=postQuote).meta-author by Calvin Fitzgerald
                a(href=postQuote) 3 comment(s)
                +tag-list({
                  list_class: 'list-inline-tag',
                  href: postLink,
                  items: [
                    "News",
                    'State Guide']
                })

          .post-classic-footer
            a(href=postQuote).button.button-primary-outline Read more


        // Post classic
        article.post-classic.post-minimal
          +jpg('single-post-1-886x661', 'img-bordered')

          .post-classic-title
            h5: a(href=postImage) A Definitive Guide to the Best Dining and Drinking Venues in the City

          .post-meta
            .group
              a(href=postImage): time(datetime='2017') Jan.20, 2016
              a(href=postImage).meta-author by Calvin Fitzgerald

        // Post classic
        article.post-minimal
          +jpg('single-post-2-886x661', 'img-bordered')
          .post-classic-title
            h5: a(href=postImage) A Definitive Guide to the Best Dining and Drinking Venues in the City

          .post-meta
            .group-xs
              a(href=postImage): time(datetime='2017') Jan.20, 2016
              a(href=postImage).meta-author by Calvin Fitzgerald
