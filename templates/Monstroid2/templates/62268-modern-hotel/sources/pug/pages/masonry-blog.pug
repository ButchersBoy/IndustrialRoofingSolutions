          .post-minimal-footer
            .post-meta
              .group
                a(href=postAudio): time(datetime='2017') Jan.20, 2016
                a(href=postAudio).meta-author by Calvin Fitzgerald

  +divider
  section.section-sm.text-center
    .container
      +pagination

  // Page Footer
  include ../sections/_footer-corporate