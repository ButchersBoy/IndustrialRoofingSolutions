extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs

block variables
	- var activeIndex = 6
	- var pageName = 'Header Transparent'

block page
	// Page header
	header.page-header.page-header-default
		// RD Navbar
		.rd-navbar-wrap
			nav.rd-navbar(
				data-layout=            'rd-navbar-fixed',
				data-sm-layout=         'rd-navbar-fixed',
				data-md-layout=         'rd-navbar-fixed',
				data-lg-layout=         'rd-navbar-fixed',
				data-xl-layout=         'rd-navbar-static',
				data-xxl-layout=        'rd-navbar-static',
			
				data-sm-device-layout=  'rd-navbar-fixed',
				data-md-device-layout=  'rd-navbar-fixed',
				data-lg-device-layout=  'rd-navbar-fixed',
				data-xl-device-layout=  'rd-navbar-static',
				data-xxl-device-layout= 'rd-navbar-static',
				
				data-body-class='rd-navbar-static-smooth rd-navbar-default-linked'
			)
				.rd-navbar-inner
					// RD Navbar Panel
					.rd-navbar-panel
						button.rd-navbar-toggle(data-rd-navbar-toggle='.rd-navbar-nav-wrap'): span

						// RD Navbar Brand
						.rd-navbar-brand
							a.brand-name.brand-name-static(href='index.html')
								+png(logoDefault)
							a.brand-name.brand-name-fixed(href='index.html')
								+png(logoInverse)

					// RD Navbar Nav
					.rd-navbar-nav-wrap
						.rd-navbar-nav-wrap__element
							a.button.button-primary-outline(href='#') find my rate
						include ../includes/_nav

	section.context-dark.bg-image.bg-image-top.text-center(style='background-image: url(images/home-01-1920x1080.jpg)')
		.container
			.row.align-items-sm-center.justify-content-sm-center.section-full-width
				.col-xl-11
					p.heading-4 Personal Loans at Fixed Rates from
						="\t"
						span.text-sbold.text-primary 5.95% APR
						="\t"
						| to 
						="\t"
						span.text-sbold.text-primary 12.99% APR
						="\t"
						br.d-none.d-xl-block.d-xxl-none
						| (with AutoPay)
					a.button.button-primary(href='#') find my rate
					p.heading-4 Call us for a Free Consultation at
					a.link-phone.heading-4(href='callto:#') 855-456-7634
					p Checking your rate will not affect your credit score.
		

	+breadcrumbs({
		path: [[menu[activeIndex].title, menu[activeIndex].link], ['Headers', '#'], [pageName]]
	})

	section.section-xl.bg-default.text-center
		.container
			.row.row-70
				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-1-418x315')

				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-2-418x315')

				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-3-418x315')

				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-4-418x315')

				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-5-418x315')

				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-6-418x315')
	='\n'

	section.section-xl.bg-default
		.container-fluid
			.row.no-gutters
				.col-md-8
					+jpg('images-10-1280x640', 'img-responsive')
				.col-md-4
					+jpg('images-11-640x640', 'img-responsive')
	='\n'

	// Page Footer
	include ../sections/_footer-corporate


block modals
	include ../includes/_modal-login
	include ../includes/_modal-register
