// Swiper
section
  .swiper-container.swiper-slider.swiper-slider_fullheight.bg-gray-dark(data-simulate-touch="false", data-loop='true', data-autoplay='5500')
    .swiper-wrapper
      .swiper-slide(data-slide-bg='images/slider-slide-1-1920x1080.jpg')
        .swiper-slide-caption.text-center
          .container: .row.justify-content-lg-center: .col-lg-10
            h1.heading-decorated(data-caption-animate='fadeInUpSmall') Construction
            h4.text-boxed(data-caption-animate='fadeInUpSmall', data-caption-delay='200') See how a 10-stories tower's being built, in a time-lapse!
            a.button.button-primary(data-caption-animate='fadeInUpSmall', data-caption-delay='350', href='projects.html') See Our Recent Projects

      .swiper-slide.text-center(data-slide-bg='images/slider-slide-2-1920x1080.jpg')
        .swiper-slide-caption
          .container: .row.justify-content-lg-center: .col-lg-10
            h1.heading-decorated(data-caption-animate='fadeInUpSmall') Discounts
            h4(data-caption-animate='fadeInUpSmall', data-caption-delay='200') Summer discounts for big construction projects!
            a.button.button-primary(data-caption-animate='fadeInUpSmall', data-caption-delay='350', href='projects.html') See Our Recent Projects

      .swiper-slide.text-center(data-slide-bg='images/slider-slide-3-1920x1080.jpg')
        .swiper-slide-caption 
          .container: .row.justify-content-lg-center: .col-lg-10
            h1.heading-decorated(data-caption-animate='fadeInUpSmall') Projects
            h4(data-caption-animate='fadeInUpSmall', data-caption-delay='200') This year we took more complex constructions than ever before...
            a.button.button-primary(data-caption-animate='fadeInUpSmall', data-caption-delay='350', href='projects.html') See Our Recent Projects

    // Swiper Pagination
    .swiper-pagination

    // Swiper Navigation
    .swiper-button-prev.linear-icon-chevron-left
    .swiper-button-next.linear-icon-chevron-right

='\n'
