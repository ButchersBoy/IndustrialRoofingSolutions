extends  ../_skeleton

block variables
	- pageName = 'Header Inverse'

block page
	// Page header
	header.page-header
		include ../sections/_header-inverse
		
		include ../sections/_section-slider-commercial
	='\n'
	
	+breadcrumbs
	='\n'
	
	section.section.novi-bg.novi-bg-img.section-xl.bg-default.text-center
		.container
			.row.row-70
				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-1-418x315')
				
				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-2-418x315')
				
				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-3-418x315')
				
				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-4-418x315')
				
				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-5-418x315')
				
				.col-md-6.col-lg-4: a.link-image(href='#')
					+jpg('brand-6-418x315')
	='\n'
	
	section.section.novi-bg.novi-bg-img.section-xl.bg-default
		.container-fluid
			.row.g-0
				.col-md-8
					+jpg('images-10-1280x640')
				.col-md-4
					+jpg('images-11-640x640')
	='\n'
	
	// Page Footer
	include ../sections/_footer-corporate

block modals
	include ../includes/_modal-login
	include ../includes/_modal-register
