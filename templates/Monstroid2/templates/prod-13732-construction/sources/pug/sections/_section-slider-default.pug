// Swiper
section
  .swiper-container.swiper-slider.swiper-slider_fullheight.bg-gray-dark(data-simulate-touch="false", data-loop='true', data-autoplay='5000')
    .swiper-wrapper
      .swiper-slide(data-slide-bg='images/slider-slide-1-1920x1080.jpg')
        .swiper-slide-caption.text-left
          .container: .row.justify-content-center.justify-content-xxl-start: .col-lg-10.col-xxl-6
            h1(data-caption-animate='fadeInUpSmall') From start to finish
            h5.font-weight-normal(data-caption-animate='fadeInUpSmall', data-caption-delay='200') See how a 10-stories TOWER IS being built, in a time-lapse!
            a.button.button-primary(data-caption-animate='fadeInUpSmall', data-caption-delay='350', href='projects.html') See Our Recent Projects

      .swiper-slide.text-center.swiper-slide-overlay(data-slide-bg='images/slider-slide-2-1920x1080.jpg')
        .swiper-slide-caption
          .container: .row.justify-content-lg-center: .col-lg-10
            h1(data-caption-animate='fadeInUpSmall') Summer discounts
            h5.font-weight-normal(data-caption-animate='fadeInUpSmall', data-caption-delay='200') Summer discounts ON big construction projects!
            a.button.button-primary(data-caption-animate='fadeInUpSmall', data-caption-delay='350', href='projects.html') See Our Recent Projects

      .swiper-slide.text-right.swiper-slide-overlay(data-slide-bg='images/slider-slide-3-1920x1080.jpg')
        .swiper-slide-caption  
          .container: .row.justify-content-center.justify-content-xxl-end: .col-lg-10.col-xxl-6
            h1(data-caption-animate='fadeInUpSmall') You dream it, we build it
            h5.font-weight-normal(data-caption-animate='fadeInUpSmall', data-caption-delay='200') This year we took more complex constructions than ever before...
            a.button.button-primary(data-caption-animate='fadeInUpSmall', data-caption-delay='350', href='projects.html') See Our Recent Projects

    // Swiper Pagination
    .swiper-pagination

    // Swiper Navigation
    .swiper-button-prev.linear-icon-chevron-left
    .swiper-button-next.linear-icon-chevron-right

='\n'
