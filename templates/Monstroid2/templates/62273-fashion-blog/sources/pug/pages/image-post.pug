extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs
include ../elements/_ui-tag-list
include ../elements/_ui-list-inline-icon



block variables
  - var activeIndex = 2
  - var pageName = 'Image post'

block page
  // Page header
  include ../sections/_header-sidebar-inverse

  +breadcrumbs({
      path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  section.bg-default.section-md
    .container
      .row.row-60.justify-content-sm-center
        .col-lg-8.section-divided__main
          section.section-sm.post-single-body
            h3 SASHA AND MALIA OBAMA'S STYLE EVOLUTION
            .post-meta
              .group
                a(href=postImage): time(datetime='2017') Jan.20, 2016
                a(href=postImage).meta-author by Brian Williamson
                a(href=postImage) 3 comment(s)
                a(href=postImage) Theme
                +tag-list({
                    list_class: 'list-inline-tag',
                    href: postImage,
                    items: [
                        "Style",
                        'Clean']
                })
                
            +img-thumbnail({
                number: 1,
                original: 'gallery-post-03-original-1200x800',
                img: 'blog18-886x668'
            })
            include ../sections/_section-post-single-content

          include ../sections/_section-blog-post-comment

        .col-lg-4.section-divided__aside.section-divided__aside-left
          include ../sections/_section-aside-sidebar-post

  section.section-sm.bg-default
    include ../sections/_section-carousel-post

  // Page Footer
  include ../sections/_footer-minimal

