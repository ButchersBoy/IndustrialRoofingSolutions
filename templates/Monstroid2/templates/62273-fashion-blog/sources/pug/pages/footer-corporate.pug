extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs

block variables
  - var activeIndex = 0
  - var pageName = 'Footer corporate'

block page
  // Page header
  include ../sections/_header-sidebar-inverse

  +breadcrumbs({
    path: [['Footers', '#'], [pageName]]
  })
 
  section.section-lg.bg-default.text-center
    .container
      .row.row-70
        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('brand-1-418x315')

        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('brand-2-418x315')

        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('brand-3-418x315')

        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('brand-4-418x315')

        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('brand-5-418x315')

        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('brand-6-418x315')
  ='\n'

  section.section-lg.bg-default
    .container-fluid
      .row.no-gutters
        .col-md-8
          figure.figure-fullwidth
            +jpg('images-10-1280x640')
        .col-md-4
          figure.figure-fullwidth
            +jpg('images-11-640x640')
  ='\n'

  // Page Footer
  include ../sections/_footer-corporate

