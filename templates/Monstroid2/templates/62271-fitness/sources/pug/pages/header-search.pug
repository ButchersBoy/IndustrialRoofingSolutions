extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs

block variables
  - var activeIndex = 0
  - var pageName = 'Header search'

block page
  // Page header
  header.page-header.section
    // RD Navbar
    .rd-navbar-wrap
      nav.rd-navbar(
      data-body-class=              'rd-navbar-static-smooth'
      data-layout=                  'rd-navbar-fixed',
      data-sm-layout=               'rd-navbar-fixed',
      data-md-layout=               'rd-navbar-fixed',
      data-md-device-layout=        'rd-navbar-fixed',
      data-lg-layout=               'rd-navbar-static',
      data-lg-device-layout=        'rd-navbar-fixed',
      data-xl-layout=               'rd-navbar-static',
      data-xl-device-layout=        'rd-navbar-static',
      data-xxl-layout=              'rd-navbar-static',
      data-xxl-device-layout=       'rd-navbar-static',
      data-lg-stick-up-offset=      '69px',
      data-xl-stick-up-offset=      '35px',
      data-xxl-stick-up-offset=     '35px',
      data-lg-stick-up=             'true',
      data-xl-stick-up=             'true',
      data-xxl-stick-up=            'true'
      )
        .rd-navbar-inner.rd-navbar-search-wrap
          // RD Navbar Panel
          .rd-navbar-panel
            button.rd-navbar-toggle(data-rd-navbar-toggle='.rd-navbar-nav-wrap'): span

            // RD Navbar Brand
            .rd-navbar-brand
              a.brand-name(href='index.html')
                +png('logo-1770x398')

          // RD Navbar Search wrap
          // RD Navbar Nav
          .rd-navbar-nav-wrap.rd-navbar-search_not-collapsable
            .rd-navbar-search_collapsable
              button.rd-navbar-search__toggle.rd-navbar-fixed--hidden(data-rd-navbar-toggle='.rd-navbar-search-wrap')

            include ../includes/_navbar-search

            .rd-navbar-search_collapsable
              include ../includes/_nav

  +breadcrumbs({
    path: [['Headers', '#'], [pageName]]
  })

  section.section-lg.bg-default.text-center
    .container
      .row.row-70
        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('post-classic-1-886x668')

        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('post-classic-2-886x668')

        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('post-classic-3-886x668')

        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('post-classic-4-886x668')

        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('post-classic-5-886x668')

        .col-md-6.col-lg-4: a.link-image(href='#')
          +jpg('post-classic-6-886x668')
  ='\n'

  // Page Footer
  include ../sections/_footer-minimal

