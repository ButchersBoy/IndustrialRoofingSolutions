extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs

block variables
  - var activeIndex = 4
  - var pageName = 'Number Counter'

block page
  // Page header
  include ../sections/_header-default

  +breadcrumbs({
    path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  section.section-lg.bg-default.text-center.section
    .container
      .row.justify-content-md-center.row-50
        .col-md-6.col-lg-4.col-xl-3
          // Box counter
          article.box-counter
            .box-counter__icon.linear-icon-users2
            .box-counter__wrap
              .counter 124
            p.box-counter__title Current Clients

        .col-md-6.col-lg-4.col-xl-3
          // Box counter
          article.box-counter
            .box-counter__icon.linear-icon-group-work
            .box-counter__wrap
              .counter 145
            p.box-counter__title Virtual Clients
  ='\n'

  section.section-lg.context-dark.bg-accent.text-center.section
    .container
      .row.justify-content-md-center.row-50
        .col-md-6.col-lg-3
          // Box counter
          article.box-counter
            .box-counter__icon.linear-icon-coffee-cup
            .box-counter__wrap
              .counter 100
            p.box-counter__title Coffee Cups

        .col-md-6.col-lg-3
          // Box counter
          article.box-counter
            .box-counter__icon.linear-icon-cube
            .box-counter__wrap
              .counter 74
            p.box-counter__title Projects Done

        .col-md-6.col-lg-3
          // Box counter
          article.box-counter
            .box-counter__icon.linear-icon-chevrons-expand-horizontal
            .box-counter__wrap
              .counter 500
            p.box-counter__title Lines of Code

        .col-md-6.col-lg-3
          // Box counter
          article.box-counter
            .box-counter__icon.linear-icon-mustache-glasses
            .box-counter__wrap
              .counter 147
            p.box-counter__title Happy Customers

  ='\n'

  // Page Footer
  include ../sections/_footer-minimal

