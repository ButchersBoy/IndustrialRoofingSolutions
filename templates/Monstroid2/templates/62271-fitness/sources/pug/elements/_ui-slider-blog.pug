mixin slider-blog(obj)
  // Owl Carousel
  .owl-carousel(data-autoplay='true', data-items='1', data-stage-padding='0', data-loop='true', data-margin='0', data-mouse-drag="false" data-nav='true' data-dots='false' data-lightgallery='group' class=obj.class)
    each item in obj.items
      .item
        +img-thumbnail({
            number: 1,
            original: item.original_img,
            img: item.img_thumb
        })
